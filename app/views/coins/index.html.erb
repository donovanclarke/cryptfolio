<h1>Track your profits/losses</h1>
<div class="row">
  <div class="col-md-6 col-sm-12">
    <a href="#" data-toggle="modal" data-target="#buyModal">Enter buy</a>
    <div>
      <% @buy.each do |item| %>
        <div class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-end">
            <!-- <%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, coin_path(item), method: :delete, data: { confirm: 'Are you sure?' } %> -->
          </div>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= item.coinID %></h5>
            <small>$ amount here </small>
          </div>
          <p class="mb-1"><span style="font-weight: bold;">Amount bought</span> <%= item.amount %></p>
          <small></small>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <a href="#" data-toggle="modal" data-target="#sellModal">Enter sell</a>
    <div>
      <% @sell.each do |item| %>
        <div class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-end">
            <%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, coin_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= item.coinID %></h5>
            <small>$ amount here </small>
          </div>
          <p class="mb-1"><span style="font-weight: bold;">Amount bought</span> <%= item.amount %></p>
          <small></small>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="buyModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create buy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% form_for '/coins/index' do |f| %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary float right">Buy</button>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="sellModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create sell</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary float right">Buy</button>
      </div>
    </div>
  </div>
</div>
